---
import { Icon } from "astro-icon/components"
import navData from "../data/nav-data.js"
import Link from "./Link.astro"
---
<nav aria-label="Primary Navigation">
  <div class="navbar">
    <a href="/" class="logomark" aria-label="Go home">
      <Icon name="logomark"
            width={80}
            height={80}
      />
    </a>
    <ul>
      {
        navData.map((item) => (
          <li>
            <Link
              text={item.title}
              href={item.link}
              style={"secondary"}
              isFilled={false}
              data-navLink
            />
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<script>
  import "../lib/nav.ts"
</script>
